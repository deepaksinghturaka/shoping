<%- include('./partials/header') %>
<% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 bg-blue-500 p-4 rounded shadow-md">
        <span class="text-white font-medium">
            <%= success %>
        </span>
    </div>
<% } %>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .hidden {
        display: none;
    }

    .toggle-button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 6px 12px;
        cursor: pointer;
        border-radius: 5px;
        font-size: 14px;
    }

    .toggle-button:hover {
        background-color: #0056b3;
    }

    .min-h-screen {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container {
        display: flex;
        flex-grow: 1;
        gap: 20px;
        border: 5px solid #007bff; /* Outer Border */
        border-radius: 15px;       /* Rounded Corners */
        padding: 20px;            /* Inner Padding */
        background: #ffffff;      /* White Background */
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1); /* Shadow Effect */
    }
 
    a {
        text-decoration: none;
        color: #007bff;
        font-weight: 500;
        margin-bottom: 10px;
    }

    a:hover {
        color: #0056b3;
    }

    h2 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    label {
        font-weight: 600;
        display: block;
        margin-bottom: 0.5rem;
    }

    input, select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-bottom: 1rem;
    }

    input[type="file"] {
        padding: 6px;
    }

    input:focus, select:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 3px rgba(0, 123, 255, 0.5);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .shadow {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="min-h-screen">
    <div class="container">
        <aside class="w-1/4">
            <nav>
                <a href="#">All Products</a>
                <a href="#">Create New Product</a>
            </nav>
        </aside>
        <main class="w-3/4">
            <h2>Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <section>
                    <h3 class="font-semibold text-lg mb-2">Product Details</h3>
                    <div>
                        <label>Product Image</label>
                        <input name="image" type="file">
                    </div>
                    <div class="grid">
                        <input name="name" type="text" placeholder="Product Name">
                        <input name="price" type="text" placeholder="Product Price">
                        <input name="discount" type="text" placeholder="Discount Price">
                    </div>
                </section>

                <section>
                    <h3 class="font-semibold text-lg mb-2">Panel Details</h3>
                    <div class="grid">
                        <div>
                            <label for="bgcolor">Background Color</label>
                            <input name="bgcolor_color" id="bgcolor-color" type="color">
                            <input name="bgcolor_text" id="bgcolor-text" type="text" class="hidden" placeholder="Background Color">
                            <button type="button" class="toggle-button" onclick="toggleInput('bgcolor')">Custom</button>
                        </div>
                        <div>
                            <label for="panelcolor">Panel Color</label>
                            <input name="panelcolor_color" id="panelcolor-color" type="color">
                            <input name="panelcolor_text" id="panelcolor-text" type="text" class="hidden" placeholder="Panel Color">
                            <button type="button" class="toggle-button" onclick="toggleInput('panelcolor')">Custom</button>
                        </div>
                        <div>
                            <label for="textcolor">Text Color</label>
                            <input name="textcolor_color" id="textcolor-color" type="color">
                            <input name="textcolor_text" id="textcolor-text" type="text" class="hidden" placeholder="Text Color">
                            <button type="button" class="toggle-button" onclick="toggleInput('textcolor')">Custom</button>
                        </div>
                    </div>
                </section>

                <button class="btn-primary mt-3" type="submit">Create New Product</button>
            </form>
        </main>
    </div>
</div>
<%- include('./partials/footer') %>

<script>
    function toggleInput(type) {
        const colorInput = document.getElementById(`${type}-color`);
        const textInput = document.getElementById(`${type}-text`);
        
        if (colorInput.classList.contains('hidden')) {
            colorInput.classList.remove('hidden');
            textInput.classList.add('hidden');
        } else {
            colorInput.classList.add('hidden');
            textInput.classList.remove('hidden');
        }
    }
</script>
